{
  "name": "workout.room",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/rimraf",
      "**/rimraf/**"
    ]
  },
  "devDependencies": {
    "lerna": "^3.20.2"
  },
  "private": true,
  "scripts": {
    "test": "lerna run test",
    "start": "lerna run start",
    "start:frontend": "lerna run start",
    "frontend": "yarn workspace @workout.room/frontend start",
    "frontend:build": "yarn workspace @workout.room/frontend build",
    "backend": "yarn workspace @workout.room/backend start",
    "frontend:lint": "yarn workspace @workout.room/frontend lint",
    "build:frontend": "lerna run build --scope=@workout.room/frontend",
    "build:backend": "lerna run build --scope=@workout.room/backend",
    "lint:frontend": "eslint packages/frontend/src",
    "lint:backend": "eslint packages/backend/src"
  }
}
